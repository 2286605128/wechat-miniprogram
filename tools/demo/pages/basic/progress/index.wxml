            </view>
            <view class="padding-sm solid-bottom">
                <view class="ani-progress striped round mb-20 {{module.getRandom() % 2 === 0 ? 'animation' : ''}}" wx:for="{{colour}}">
                    <view class="bg-{{item}}" style="width: {{module.getRandom()}}%;"></view>
                </view>
            </view>
        </view>
