                彩色渐变气泡
            </view>
            <view class="padding-sm solid-bottom">
                <view class="ani-progress round bubble" wx:for="{{gradualColor}}" wx:key="index">
                    <view class="bar {{item}}" style="width: {{module.getRandom()}}%;">
                        <text></text>
