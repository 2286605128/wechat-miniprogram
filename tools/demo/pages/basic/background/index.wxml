<wxs module="module">
    var getColor = function(str) {
        return str.split('bg-')[1];
    }
    module.exports.getColor = getColor;
</wxs>
<CustomBar className="bg-gradual-red text-white" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">首页</view>
</CustomBar>
<scroll-view scroll-y class="scroll-page bgColor">
    <view class="main">
        <view class="item" wx:for="{{bgColors}}" wx:for-item="item" wx:for-index="index">
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom" wx:if="{{index === 0}}">
                <text class="dot inline-block bg-mauve"></text>
                primary
            </view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top" wx:if="{{index === 1}}">
                <text class="dot inline-block bg-mauve"></text>
                dark
            </view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top" wx:if="{{index === 2}}">
                <text class="dot inline-block bg-mauve"></text>
                disabled
            </view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top" wx:if="{{index === 3}}">
                <text class="dot inline-block bg-mauve"></text>
                light
            </view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top" wx:if="{{index === 4}}">
                <text class="dot inline-block bg-mauve"></text>
                basic
            </view>
            <view class="color-box swatch flex flex-wrap justify-around padding-sm bg-white">
                <view
                    wx:for="{{item}}"
                    wx:for-item="bgColor"
                    wx:for-index="bgIndex"
                    class="bg-item swatch-color flex align-center flex-wrap text-white padding-sm mt-20 shadow-black {{bgColor}}">
                    <text>{{module.getColor(bgColor)}}</text>
                    <text>{{colourText[bgIndex]}}</text>
                </view>
                <!-- 留一个占位避免少一个 -->
                <view class="bg-item"></view>
            </view>
        </view>
    </view>
</scroll-view>