<wxs module="module">
    var getColor = function(str) {
        return str.split('bg-')[1];
    }
    module.exports.getColor = getColor;
</wxs>
<CustomBar className="bg-gradual-red text-white" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">首页</view>
</CustomBar>
<scroll-view scroll-y class="scroll-page bgColor">
    <view class="main">
        <view class="item" wx:for="{{bgColors}}" wx:for-item="item" wx:for-index="index">
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-20" wx:if="{{index === 0}}">primary</view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-20" wx:if="{{index === 1}}">dark</view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-20" wx:if="{{index === 2}}">disabled</view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-20" wx:if="{{index === 3}}">light</view>
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-20" wx:if="{{index === 4}}">basic</view>
            <view class="color-box flex flex-wrap justify-around padding-sm">
                <view
                    wx:for="{{item}}"
                    wx:for-item="bgColor"
                    wx:for-index="bgIndex"
                    class="bg-item flex align-center flex-wrap text-white padding-sm mt-20 {{bgColor}}">
                    <text>{{module.getColor(bgColor)}}</text>
                    <text>{{colourText[bgIndex]}}</text>
                </view>
            </view>
        </view>
    </view>
</scroll-view>