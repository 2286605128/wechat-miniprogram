<CustomBar className="bg-gradual-purple text-white" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content" class="capitalize">
        <text>底部bar</text>
    </view>
</CustomBar>
<scroll-view scroll-y class="scroll-page">
    <view class="main">
        <view class="item">
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top">
                <text class="ani-badge il-block bg-gradual-purple"></text>
                基础bar
            </view>
            <view class="box bg-white">
                <view class="cell text-center">
                    <MenuBar
                        color="{{menuBar.color}}"
                        selectedColor="{{menuBar.selectedColor}}"
                        current="{{menuBar.current}}"
                        backgroundColor="{{menuBar.backgroundColor}}"
                        list="{{menuBar.list}}" />
                </view>
            </view>
        </view>
    </view>
</scroll-view>