  --radial-bg: radial-gradient(#550d39, #270537);
  background: var(--radial-bg);
}
.stage {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.stage .campfire {
  position: relative;
  width: 600rpx;
  height: 400rpx;
  transform-origin: center center;
  transform: scale(0.75);
}
.stage .campfire .sparks .spark {
  position: absolute;
  width: 6rpx;
  height: 20rpx;
  background: #fef1d9;
  border-radius: 18rpx;
  z-index: 50;
  transform-origin: bottom center;
  transform: scaleY(0);
}
