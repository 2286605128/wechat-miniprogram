.main {
  display: flex;
  width: 100%;
  min-height: calc(100vh - 500rpx);
  padding-bottom: 140rpx;
}
.main .box .item {
  width: 300rpx;
  margin-top: 40rpx;
  border-radius: 28rpx;
  padding: 52rpx 20rpx;
}
