page {
  background-color: var(--red);
}
.scroll-page {
  background-color: var(--ghost-white);
}
.main .box {
  margin-top: 20rpx;
}
.main .box .ani-form-group .tag-btn {
  line-height: 20rpx;
  font-size: 20rpx;
}
.main .choose-img,
.main .bg-img {
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  border-radius: 8rpx;
  overflow: hidden;
}
.main .choose-img {
  width: 150rpx;
}
.main .bg-img {
  margin-right: 20rpx;
  position: relative;
}
.main .bg-img image {
  width: 100%;
  height: 100%;
  position: relative;
}
.main .bg-img .close-img {
  opacity: 0.6;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 3px;
  padding: 8rpx;
  height: 42rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
