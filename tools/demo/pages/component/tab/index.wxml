<CustomBar className="bg-gradual-olive text-white" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content" class="capitalize">tab组件</view>
</CustomBar>
<scroll-view scroll-y class="scroll-page">
    <view class="main">
        <view class="item">
            <view class="box-bar color-primary bg-white fs-30 capitalize pl-30 solid-bottom solid-top">
                <text class="ani-badge il-block bg-gradual-olive"></text>
                基础tab
            </view>
            <Tab
                class="text-center"
                currentTab="{{currentTab}}"
                tabData="{{tabData1}}"
                bind:changeEvent="changeEvent"></Tab>
            <swiper
                class="ani-swiper"
                current="{{currentTab}}"
                style="height: {{swiperHeight ? swiperHeight + 'px' : 'auto'}}"
                bindchange="switchTabContent">
                <swiper-item class="ani-swiper-item">
                    这里放置tab1的内容
                </swiper-item>
