<view
    class="{{prefix}}-tabbar {{ isFixed ? prefix + '-tabbar-fixed' : '' }} {{ unlined ? prefix + '-unlined' : '' }}"
    style="background: {{backgroundColor}}">
    <block
        wx:for="{{list}}"
        wx:key="key">
        <view
            class="{{prefix}}-tabbar-item {{item.className}} {{item.hump ? prefix + '-item-hump' : ''}}"
            style="background: {{item.hump ? backgroundColor : 'none'}}"
            bindtap="menuBarSwitch" data-index="{{index}}">
            <view class="{{prefix}}-icon-box {{ item.hump ? prefix + '-tabbar-hump' : '' }}">
                <text
                    style="color: {{current == index ? (item.selectedColor || selectedColor) : color}}"
                    class="{{item.icon}}"></text>
            </view>
            <view
                class="{{prefix}}-text-scale {{item.hump ? prefix + '-text-hump' : ''}}"
                style="color: {{current == index ? (item.selectedColor || selectedColor) : color}}">
                {{item.text}}
            </view>
            <view
                class="{{item.badge.show ? prefix + '-badge' : ''}} {{item.badge.class}}"
                style="{{item.badge.style}}"
                wx:if="{{item.badge.show}}">
                {{item.badge.num || ''}}
            </view>
        </view>
    </block>
    <view
        class="{{ hump ? prefix + '-hump-box' : '' }}"
        wx:if="{{ hump && !unlined }}"></view>
</view>