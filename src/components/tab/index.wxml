<view class="ani-tab">
    <scroll-view
        scroll-x="true"
        scroll-with-animation="{{true}}"
        class="ani-bar"
        scroll-left="{{(currentTab - 2) * singleNavWidth}}">
        <view
            class="item {{currentTab == index ? 'selected  text-{{activeColorClass}}' : ''}}"
            wx:for="{{tabData}}"
            wx:key="name"
            data-current="{{index}}"
            catchtap="switchNav">
            {{item.name}}
        </view>
    </scroll-view>
</view>